{
  "type": "object",
  "properties": {
    "paragraphs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "段落纯文本内容（不含Markdown格式符号如#*>等）"
          },
          "style_type": {
            "type": "string",
            "enum": [
              "title",
              "recipient",
              "heading1",
              "heading2",
              "heading3",
              "heading4",
              "body",
              "closing",
              "signature",
              "date",
              "attachment"
            ],
            "description": "段落样式类型"
          },
          "font_size": {
            "type": "string",
            "enum": [
              "初号",
              "小初",
              "一号",
              "小一",
              "二号",
              "小二",
              "三号",
              "小三",
              "四号",
              "小四",
              "五号",
              "小五"
            ],
            "description": "字号（可选，后端根据style_type自动补全）"
          },
          "font_family": {
            "type": "string",
            "enum": [
              "方正小标宋简体",
              "黑体",
              "楷体_GB2312",
              "仿宋_GB2312",
              "宋体",
              "微软雅黑"
            ],
            "description": "字体（可选，后端自动补全）"
          },
          "bold": {
            "type": "boolean",
            "description": "是否加粗（可选）"
          },
          "italic": {
            "type": "boolean",
            "description": "是否斜体（可选）"
          },
          "color": {
            "type": "string",
            "enum": [
              "#000000",
              "#CC0000",
              "#333333",
              "#666666",
              "#0033CC",
              "#006600",
              "#800080"
            ],
            "description": "颜色（可选，默认#000000）"
          },
          "indent": {
            "type": "string",
            "description": "首行缩进（可选，如2em、0）"
          },
          "alignment": {
            "type": "string",
            "enum": ["left", "center", "right", "justify"],
            "description": "对齐方式（可选）"
          },
          "line_height": {
            "type": "string",
            "description": "行距倍数（可选，如2、1.5）"
          },
          "red_line": {
            "type": "boolean",
            "description": "标题红色分隔线（可选，后端自动处理）"
          },
          "_index": {
            "type": "integer",
            "description": "增量修改模式下必填：段落在原文档中的位置索引（0-based），对应输入列表中的 [N] 序号。非增量模式不需要此字段"
          }
        },
        "required": ["text", "style_type"],
        "additionalProperties": false
      },
      "description": "排版后的段落数组。全量模式只需text+style_type，增量模式需完整属性"
    }
  },
  "required": ["paragraphs"],
  "additionalProperties": false
}
